<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10">

        <TextView
            android:id="@+id/topLine"
            android:layout_width="0.5dp"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"
            android:background="@color/blue_85"/>

        <TextView
            android:id="@+id/timeline_point"
            android:layout_width="@dimen/dp10"
            android:layout_height="@dimen/dp10"
            android:layout_below="@id/topLine"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/point"/>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_below="@id/timeline_point"
            android:layout_centerHorizontal="true"
            android:background="@color/blue_85" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stations"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp6"
        android:paddingRight="@dimen/dp10"
        android:paddingLeft="@dimen/dp32"
        android:paddingTop="@dimen/dp6">

        <TextView
            android:id="@+id/station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海虹桥"
            android:layout_marginTop="@dimen/dp3"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/times"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp6"
        android:paddingRight="@dimen/dp20"
        android:paddingLeft="@dimen/dp18"
        android:paddingTop="@dimen/dp6">

        <TextView
            android:id="@+id/arrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:text="14:10"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/clock"
            android:layout_marginTop="@dimen/dp5"
            android:paddingLeft="40dp"/>
        <TextView
            android:id="@+id/stopTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:paddingLeft="@dimen/dp60"
            android:text="3'"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/departureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:paddingLeft="@dimen/dp80"
            android:text="15:01"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </RelativeLayout>
</LinearLayout>